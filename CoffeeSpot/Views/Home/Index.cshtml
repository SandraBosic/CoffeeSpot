@model List<CoffeeSpot.Models.CoffeeSpotModel>

<div class="row">
    <div class="col-md-6">
        <h1>List of Coffee Spots</h1>
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item list-group-item-success">
                    @Html.ActionLink(item.Name,
                    "Index",   // <-- ActionMethod
                    "ProfilePage",  // <-- Controller Name.
                    new { item.Id }, // <-- Route arguments.
                    null)
            </li>
            }
        </ul>
    </div>

    <div class="col-md-6" style="display:inline-block">
        <div id="newCoffeeSport" style="float:right">
            @Html.Partial("_AddCoffeeSpot", new CoffeeSpot.Models.CoffeeSpotModel())
        </div>
    </div>
</div>