@model CoffeeSpot.Models.FeedbackModel

@{
    var id = ViewContext.RouteData.Values["id"];
}

@using (Html.BeginForm("CreateFeedback", "ProfilePage", new { id = id }, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Grade)
        <div>
            @Html.TextBoxFor(model => model.Grade)
            @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment)
        <div>
            @Html.TextBoxFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
            @Ajax.ActionLink("Clear",
                "ClearForm",   // <-- ActionMethod
                new { @class = "btn btn-default" },
                new AjaxOptions { UpdateTargetId = "addNewFeedback", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }
                )
        </div>
    </div>
}
